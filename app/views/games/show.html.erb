<div class="columns is-multiline is-mobile">
  <div class="column is-mobile is-half">
    <div class="card">
      <% if @game.cover.present? %>
        <div class="card-image">
          <figure class="image">
            <%= image_tag @game.cover.variant(resize_to_limit: [300, 300]) %>
          </figure>
        </div>
      <% else %>
          <p>IMAGE ðŸ“¸</p>
      <% end %>
    </div>
  </div>

  <div class="column is-mobile is-half">
    <div class="media-content">
      <p><strong>Name:</strong> <%= @game.name %></p>
      <p><strong>Release_date:</strong> <%= @game.release_date %></p>
      <p><strong>Description:</strong> <%= @game.description %></p>
      <p><strong>Genre:</strong>
          <% countGenres = @game.genres.count %>
            <% @game.genres.each do |g| %>
              <% if countGenres > 1 %>
                <%= link_to g.name, genre_path(g) %>,
              <% else %>
                <%= link_to g.name, genre_path(g) %>
              <% end %>
            <% end %>
        </p></p>
      <p><strong>Sku:</strong> <%= @game.sku %></p>
      <% if @game.price > 0 %>
      <p><strong>Price:</strong> <%= @game.price %></p>
      <p><strong>Stock:</strong> <%= @game.stock %></p>
        <% else %>
            <button>Download for free</button>
        <% end %>
      <!--<p><strong>link:</strong> under construction</p>-->
        <div class="field is-grouped is-grouped">
          <div class="mr-3">
            <%= form_with url: add_to_cart_path, method: :post do %>
              <%= hidden_field_tag(:id, @game.id) %>
              <%= button_tag 'Add To Cart' %>
            <% end %>
          </div>
          <div class="mr-3">
            <% if cart.include?(@game) %>
              <%= button_to remove_from_cart(@game), method: :delete do %>
                  Remove From Cart
              <% end %>
            <% end %>
          </div>
          <div>
            <%= button_to 'buy now', checkout_create_path, method: :post, params: { id: @game.id }, remote: true %>
          </div>
        </div>
          <% if flash[:notice] %>
            <p><%= flash[:notice] %></p>
          <% end %>
    </div>
  </div>